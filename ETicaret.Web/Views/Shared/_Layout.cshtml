@using ETicaret.Web.Code;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETicaret.Web</title>

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETicaret.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <script>
        let TOKEN = "@Repo.Session.Token";
    </script>

</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary mt-4">
        <div class="container">
            <a class="navbar-brand navbar-brand-centered" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/yenilogo.png" width="300px" height="80px" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <form class="d-flex me-auto" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
                <ul class="navbar-nav mb-2 mb-lg-0">


                    <li class="nav-item dropdown">
                        @if (string.IsNullOrEmpty(Repo.Session.Email))
                        {
                            <a class="nav-link text-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>

                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @Repo.Session.Email
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link text-primary" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                            </ul>
                        }

                        

                    </li>
                    @if (string.IsNullOrEmpty(Repo.Session.Email))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-primary" asp-area="" asp-controller="Account" asp-action="SignUp">SignUp</a>
                        </li>
                    }

                </ul>
               
            </div>
        </div>

    </nav>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <a class="btn btn-outline-primary col text-decoration-none" asp-area="" asp-controller="Home" asp-action="KategoriEvselSu" role="button">EVSEL SU ARITMA</a>
            <a class="btn btn-outline-primary col text-decoration-none" asp-area="" asp-controller="Home" asp-action="KategoriEvselYedek" role="button">EVSEL YEDEK PARÇA</a>
            <a class="btn btn-outline-primary col text-decoration-none" asp-area="" asp-controller="Home" asp-action="KategoriEndüstrielSu" role="button">ENDÜSTRİEL SU ARITMA</a>
            <a class="btn btn-outline-primary col text-decoration-none" asp-area="" asp-controller="Home" asp-action="KategoriEndüstrielYedek" role="button">ENDÜSTRİEL YEDEK PARÇA</a>
            
        </div>
    </div>

    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

